{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chattia.io/schemas/asset-registry.schema.json",
  "title": "Asset Registry Record",
  "description": "Registry schema for asset inventory, integrity, and governance metadata.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "asset_id",
    "asset_type",
    "display_name",
    "classification",
    "source",
    "integrity",
    "serving",
    "policy",
    "audit"
  ],
  "properties": {
    "asset_id": {
      "type": "string",
      "description": "Stable registry identifier (ULID/UUID style).",
      "pattern": "^(asset_)[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "asset_type": {
      "type": "string",
      "enum": ["image", "script", "doc", "model", "dataset", "config"]
    },
    "display_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 140
    },
    "owner": {
      "type": "object",
      "additionalProperties": false,
      "required": ["team"],
      "properties": {
        "team": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "business_unit": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        }
      }
    },
    "classification": {
      "type": "string",
      "enum": ["public", "internal", "restricted", "pci"]
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["origin_url", "repository", "path", "version"],
      "properties": {
        "origin_url": {
          "type": "string",
          "format": "uri"
        },
        "repository": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200
        },
        "path": {
          "type": "string",
          "minLength": 1,
          "maxLength": 260
        },
        "version": {
          "type": "string",
          "minLength": 5,
          "maxLength": 120
        }
      }
    },
    "integrity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sha512"],
      "properties": {
        "sha512": {
          "type": "string",
          "description": "Lowercase hex-encoded SHA-512 digest.",
          "pattern": "^[a-f0-9]{128}$"
        }
      }
    },
    "serving": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary_url", "fallback_url", "cache_ttl_seconds"],
      "properties": {
        "primary_url": {
          "type": "string",
          "format": "uri"
        },
        "fallback_url": {
          "type": "string",
          "format": "uri"
        },
        "cache_ttl_seconds": {
          "type": "integer",
          "minimum": 60,
          "maximum": 31536000
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["retention_days", "allowed_origins", "required_headers"],
      "properties": {
        "retention_days": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3650
        },
        "allowed_origins": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "required_headers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 80
          }
        }
      }
    },
    "attestation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signed_metadata_jws", "signing_key_id"],
      "properties": {
        "signed_metadata_jws": {
          "type": "string",
          "minLength": 10,
          "maxLength": 4096
        },
        "signing_key_id": {
          "type": "string",
          "minLength": 6,
          "maxLength": 120
        }
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["created_at", "updated_at", "change_log"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "change_log": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["by", "action", "when"],
            "properties": {
              "by": {
                "type": "string",
                "minLength": 2,
                "maxLength": 120
              },
              "action": {
                "type": "string",
                "minLength": 2,
                "maxLength": 120
              },
              "when": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      }
    }
  }
}
